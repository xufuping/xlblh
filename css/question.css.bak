body, div, ul,li,h2, h3, h4,form, input,p{
	margin: 0;
	padding: 0;	
}
body{
	font-family: "微软雅黑";
}
/*头部*/
.header{
	width: 100%;
	height: 51px;
	margin-bottom: 59px;
	margin-top: 30px;
}
.header_content,.nav_content{
	width: 1000px;
	height: 100%;
	margin: 0 auto;
	position: relative;
}
.header_content_block{
	width: 160px;
	height: 100%;
	background-color: #bed742;
	display:block;
	float: left;
}
#Search_input{
	width: 520px;
	height: 35px;
	float: left;
	margin-top: 12px;
	margin-left: 30px;
	border-right: none;
}
.head {
	float: left;
	position: absolute;
	right: 0;
	top: 0;
	font-size: 16px;
}
.head li{
	list-style: none;
	float: left;
	margin-left: 28px;
}
.head li a{
	color: #999999;
	text-decoration: none;
}
/*登录界面*/
#close{
	width: 25px;
	height: 25px;
	float: right;
}
#log_card{
	text-align: center;
	display: none;
	z-index: 101;
	margin: 0 auto;
	position: absolute;
	top: 200px;
	left: 50%;
	margin-left:-257px; 
	width: 515px;
	height:324px;
	background: #FFFFFF;
}
.log_card_log{
	margin-top: 58px;
	font-family: '微软雅黑';
	font-size: 24px;
	font-weight: bold;
}
#userName{
	display: inline-block;
	margin-top: 30px;
	margin-right: 20px;
	font-family: '微软雅黑';
	font-size: 18.67px;
	font-weight: bold;
}
#password{
	display: inline-block;
	margin-top: 24px;
	margin-right: 20px;
	font-family: '微软雅黑';
	font-size: 18.67px;
	font-weight: bold;
}
.userName{
	width: 241px;
	height: 27px;
}
.password{
	width: 241px;
	height: 27px;
}
.log_btn{
	margin-top: 35px;
	margin-left: 160px;
	width: 241px;
	height: 42px;
	line-height: 42px;
	border-radius: 10px;
	cursor: pointer;
	font-family: '微软雅黑';
	font-size: 18.67px;
	font-weight: bold;
	background-color: #BED742;
}
#Search_span{
	width: 98px;
	height: 38px;
	border: none;
	background-color: #bed742;
	border-radius: 7px;
	cursor: pointer;
	margin-top: 12px;
	margin-left: -8px;
}
/*导航*/
.nav{
	width: 100%;
	height: 50px;
	background-color: #bed742;
	margin-bottom: 60px;
}
.nav_content_ul{
	margin-left: 112px;
	list-style: none;
	font-size: 24px;
	font-weight: bold;
	height: 50px;
}
.nav_content_ul li{
	float: left;
	width: 156px;
	line-height: 50px;
	margin: 0 auto;
	text-align: center;
	cursor: pointer;
}
.nav_content_li{
	text-decoration: none;
	color: #fff;
} 
/*主体*/
.main{
	width: 1000px;
	margin: 0 auto;
}
/*你问我答*/
.que{
	width: 100%;
}
.que_title{
	font-size: 24px;
	font-weight: bold;	
}
.bor{
	border-bottom: 1px solid #666666;
	padding-bottom: 18px;
}
.que_content{
	width: 100%;
	margin-top: 24px;
	margin-bottom: 60px;
}
.que_content p{
	width: 984px;
	height: 83px;
	border: 1px solid #e7e7e7;
	margin-bottom: 30px;
	padding-left: 14px;
	padding-top: 13px;
	font-size: 10px;
	font-weight: bold;
	font-size: 19px;
	position: relative;
	cursor: pointer;	
}
.que_Name a{
	text-decoration: none;
	color: #333;
}
.que_Username_1,.que_Username_2,.que_Date{
	font-family:"微软雅黑";
	font-size: 13.34px;
	font-weight: bold;
}
.queque_content_li_last{
	margin-bottom: 0;
	font-size: 24px;
	font-weight: bold;
}
.que_Username_1{
	position: absolute;
	left: 813px;
	top: 19px;
	color: #999999;
}
.que_Username_2{
	position: absolute;
	left: 813px;
	bottom: 20px;
	color: #999999;
}
.que_Date{
	position: absolute;
	right: 18px;
	bottom: 20px;
	color: #999999;
}
/*分页*/
.page{
	width: 100%;
	height: 35px;
	display: block;
	margin-bottom: 60px;
	margin-top: 30px;
	text-align: center;
	position: relative;
}
.page_ul{
	overflow: hidden;
	display: inline-block;
}
.page_li,.page_change{
	margin: 0;
	padding: 0;
	width: 33px;
	height: 33px;
	float: left;
	list-style: none;
	margin-right: 16px;
	border: 1px solid #e7e7e7;
	font-size: 16px;
	font-weight: bold;
	color: #666;
	line-height: 33px;
	text-align: center;
	cursor: pointer;
}
.page .page_last{
	margin-right: 0;
}
.page .page_change{
	border: 1px solid #e7e7e7;
	font-size: 16px;
	font-weight: bold;
	color: #666;
	line-height: 33px;
	text-align: center;
	width: 73px;
	height: 33px;
}
.page .page_next{
	position: absolute;
	right: 140px;
}
.page .page_prev{
	position: absolute;
	left: 140px;
	
}
/*我要提问*/
.quiz{
	width: 100%;
	
}
.quiz span{
	line-height: 30px;
	font-size: 16px;
	font-weight: bold;
	float: left;
	margin-right: 24px;
}
.quiz_block{
	width: 42px;
	height: 30px;
	background-color: #bed742;
	display:block;
}
.quiz_form{
	position: relative;
}
.input_title{
	width: 986px;
	height: 23px;
	line-height: 23px;
	margin-top: 30px;
	padding-left: 14px;
	font-size: 16px;
	font-weight: bold;
	border: 1px solid #e7e7e7;
}
.txt_content{
	width: 985px;
	height: 339px;
	font-size: 16px;
	font-weight: bold;
	border: 1px solid #e7e7e7;
	margin-top: 30px;
	padding-top: 10px;
	padding-left: 15px; 
}
.btn{
	width: 100px;
	height: 31px;
	line-height: 31px;
	font-weight: bold;
	font-size:  19px;
	color: #333;
	border: none;
	background-color: #bed742;
	border-radius: 5px;
	position: absolute;
	cursor: pointer;
}
.submit{
	top: 500px;
	right: 0;	
}
.insert{
	top: 500px;
	right: 130px;
}
.txt_content img{
	width: 150px;
	height: 150px;
}
#btn_1{
	opacity: 0; 
	filter: "alpha(opacity=0)"; 
	filter: alpha(opacity=0); 
	-moz-opacity: 0; 
}
/*尾部*/
.footer{
	width: 100%;
}
.footer_bottom{
	width: 850px;
	margin: 0 auto;
	border-top: 1px solid #999;
	font-size: 16px;
	color: #999999;
	margin-top: 120px;	
}
.footer_bottom p{
	text-align: center;
	padding-top: 15px;

}
/*遮罩层*/
#mask {
	position: absolute; 
	top: 0px;left: 0px;
	display: none;
	width: 100%;
	/*height: 100%;*/
	-moz-opacity: 0.7; 
	opacity:.70; 
	filter: alpha(opacity=70); 
	background-color: #777;
	z-index: 100;
}
/*动画效果*/
.nav_content_ul li:hover {
	background-color: #eaec63;
	border-color: transparent;
}
.nav_content_ul li:hover .nav_content_li{
	color: #333;
}
.que_content p:hover{
	background-color: #eaec63;
	color: #fff;
	border-color: transparent;
}
.page li:hover{
	background-color: #eaec63;
	color: #fff;
}
.pageColor{
	background-color: #eaec63;
	color: #fff; 
}